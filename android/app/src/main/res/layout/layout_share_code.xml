<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical">
    <RelativeLayout
        android:background="@color/custom_green"
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <Button
            android:paddingLeft="15dp"
            android:background="@android:color/transparent"
            android:drawableLeft="@drawable/tt_top_back"
            android:text="        "
            android:id="@+id/bt_left_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textColor="@color/white"
            android:textSize="14sp"/>
        <TextView
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="我的二维码"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="@dimen/sp_16"
            />
    </RelativeLayout>


    <ImageView
        android:id="@+id/create_qr_iv"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="80dp"
        />

    <Button
        android:id="@+id/btn_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_circle_solid"
        android:padding="10dp"
        android:text="保存到本地"
        android:textColor="@color/white"
        android:textSize="18sp"/>

    <Button
        android:id="@+id/btn_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_circle_solid"
        android:padding="10dp"
        android:text="分享给好友"
        android:textColor="@color/white"
        android:textSize="18sp"/>
    <!--android:background="@drawable/shape_frame"-->

    <Button
        android:id="@+id/scan_qr_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:background="@null"
        android:text="扫描"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/tv_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:visibility="gone"
        />

    <ImageView
        android:id="@+id/iv_result"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        />
</LinearLayout>