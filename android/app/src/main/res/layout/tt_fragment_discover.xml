<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/radiogroup" />

    <RadioGroup
        android:id="@+id/radiogroup"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:background="@color/custom_bottom"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <Space
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"/>

        <RadioButton
            android:id="@+id/rb_findSomeOne"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:checked="true"
            android:text="@string/findSomeOne"
            android:textSize="16sp"
            style="@style/style_RadioButton"
            android:background="@drawable/selector_text_bottom_line"
            android:layout_marginBottom="2dp" />

        <Space
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"/>

        <RadioButton
            android:id="@+id/rb_findSomeGroup"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/findSomeGroup"
            android:textSize="16sp"
            style="@style/style_RadioButton"
            android:background="@drawable/selector_text_bottom_line"
            android:layout_marginBottom="2dp" />

        <Space
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"/>
    </RadioGroup>

</RelativeLayout>