<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_register1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    tools:context="com.tenth.space.ui.activity.RegisterActivity1">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/custom_bottom"
        android:layout_marginBottom="80dp"
        >
        <ImageView
            android:id="@+id/back"
            android:padding="15dp"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/tt_top_back"
            />
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:textColor="@android:color/white"
            android:textSize="18dp"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:text="@string/action_sign_in_register"/>
    </RelativeLayout>

    <EditText
        android:id="@+id/et_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@null"
        android:numeric="integer"
        android:hint="请输入您的手机号"
        android:maxLength="11"
        android:padding="5dp"
        android:singleLine="true"
        android:textColorHint="@color/txt_color_gray_3"
        android:textSize="@dimen/text_size_14"

        />

    <View
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/color_bg_gray" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText

            android:id="@+id/et_code"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="10dp"
            android:layout_weight="3"
            android:background="@null"
            android:maxLength="6"
            android:hint="请输入验证码"
            android:padding="5dp"
            android:singleLine="true"
            android:textColorHint="@color/txt_color_gray_3"
            android:textSize="@dimen/text_size_14" />
        <View
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_width="0.1dp"
            android:layout_height="match_parent"
            android:background="@color/color_bg_gray" />

        <ImageView
            android:id="@+id/iv_code"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginRight="15dp"
            />
    </LinearLayout>
    <View
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/color_bg_gray" />
    <TextView
        android:id="@+id/tv_sure"
        android:gravity="center"
        android:padding="10dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:text="下一步"
        android:textSize="@dimen/text_size_18"
        android:textColor="@color/white"
        android:background="@drawable/shape_circle_solid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
