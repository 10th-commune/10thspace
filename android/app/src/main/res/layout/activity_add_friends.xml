<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_friends"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="com.tenth.space.ui.activity.FriendsActivity">

    <FrameLayout
        android:id="@+id/search_friend"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@color/half_transparent_light"
        android:gravity="center"
        android:orientation="vertical"
        >

        <ProgressBar
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/login_status_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:fontFamily="sans-serif-light"
            android:text="@string/search_friend"
            android:textAppearance="?android:attr/textAppearanceMedium"/>
    </LinearLayout>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@+id/search_friend"
        android:layout_alignParentStart="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/custom_bottom"
            >
            <ImageView
                android:id="@+id/go_back"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:src="@drawable/tt_top_back"
                android:layout_centerVertical="true"
                android:padding="15dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="@color/white"
                android:text="搜索好友"/>

        </RelativeLayout>
    <com.tenth.space.ui.widget.DrawableCenterEditText
        android:id="@+id/search_input"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:background="@drawable/tt_top_search_bg"
        android:drawableRight="@drawable/tt_top_search"
        android:drawablePadding="9dp"
        android:paddingRight="10dp"
        android:ellipsize="end"
        android:hint="@string/menu_search"
        android:gravity="center"
        android:singleLine="true"
        android:textColorHint="#9a9b9c"
        android:textSize="14sp"
        android:imeOptions="actionSearch"
        />
    <ListView
        android:id="@+id/search_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        ></ListView>
    <TextView
        android:id="@+id/no_one"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="查无此人"
        android:gravity="center"
        android:textColor="#ff0000"
        android:textSize="26sp"
        android:visibility="gone"/>
    </LinearLayout>
</RelativeLayout>
