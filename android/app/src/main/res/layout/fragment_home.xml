<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/listview_color"
    android:orientation="vertical"
    >
    <TextView
        android:id="@+id/tv_titals"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/custom_bottom"
        android:text="首页"
        android:textSize="@dimen/top_title_size"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:gravity="center"
        />

    <ImageView
        android:id="@+id/opt_btn"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:paddingTop="0dp"
        android:src="@drawable/tt_show_add_photo_btn" />

    <RelativeLayout
        android:layout_below="@+id/tv_titals"
        android:id="@+id/ll_progress_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:background="@color/listview_color"
        >
        <WebView
            android:id="@+id/home_webview"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>


</RelativeLayout>
